extends layout

block head
  link(rel='stylesheet', href='/stylesheets/list.css')

block content
  h1= title

  ul.list
    each author in author_list
      li.bg
        p #{author.name} (#{author.date_of_birth_formatted} - #{author.date_of_death_formatted})
        a(href=author.url title="Check author details")
          i.bi.bi-eye

    else
      li.bg There are no authors.
